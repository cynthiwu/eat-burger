<div>
<img id="burger-img" src= "img/burger.png" alt="Image of a burger">
</div>

<h1 class="page-head">Eat-Da-Burger!</h1>

<div class="to-left">
<h2>Burgers to Eat</h2>
<ul class="eat-list">
  {{#each undevoured}}
       <li class="devour-list">
        {{this.burger_name}} <button data-id="{{this.id}}" class="devour-button">Devour it!</button>
       </li> 
    {{/each}}
</ul>
</div>

<div class="to-right">
<h2>Burgers Eaten</h2>
<ul class="eaten-list">
    {{#each devoured}}
       <li class="devoured-list">
        {{this.burger_name}} <button data-id="{{this.id}}" class="close-button">x</button>
       </li> 
    {{/each}}
</ul>
</div>

<div class="add-form">
<h2>Add a Burger</h2>
    <form class="create-form">

    <div class="form-group">
        <input type="text" id="bu" name="burger">
        <label id="form-label" for="ca">Enter a burger you want to eat and click the "Submit" button.</label>
    </div>

    <button id="form-button" type="button">Submit</button>
    </form>
</div>
